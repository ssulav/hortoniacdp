kinit -kt /etc/security/keytabs/joe_analyst.keytab joe_analyst/$(hostname -f)@HWX.COM; echo \"***Attempting to access T_FOREX as Joe***...\" echo \"scan 'T_FOREX'\" | hbase shell  echo \"****Attempting to access T_PRIVATE as Joe***...\" echo \"scan 'T_PRIVATE'\" | hbase shell 
kinit -kt /etc/security/keytabs/joe_analyst.keytab joe_analyst/$(hostname -f)@HWX.COM echo \"***Attempting to access FOREX topic as Joe***...\"  /usr/hdp/current/kafka-broker/bin/kafka-console-consumer.sh --bootstrap-server $(hostname -f):6667 --consumer-property security.protocol=SASL_PLAINTEXT --topic FOREX --from-beginning --max-messages 3  echo \"***Attempting to access PRIVATE topic as Joe***...\"  /usr/hdp/current/kafka-broker/bin/kafka-console-consumer.sh --bootstrap-server  $(hostname -f):6667 --consumer-property security.protocol=SASL_PLAINTEXT --topic PRIVATE --from-beginning --max-messages 3 
kinit -kt /etc/security/keytabs/joe_analyst.keytab joe_analyst/$(hostname -f)@HWX.COM hdfs dfs -cat /sensitive/private.csv
